<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/first_row"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:layout_toLeftOf="@+id/btn_cross"
            android:background="#00" />

        <Button
            android:id="@+id/btn_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentEnd="true"
            android:text="X"
            android:background="#f00"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_row"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <Button
                android:id="@+id/btn_one"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/btn_two"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_one"
                android:layout_toLeftOf="@+id/btn_three"/>

            <Button
                android:id="@+id/btn_three"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp"
                android:layout_alignParentEnd="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btn_four"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp"
                android:layout_below="@+id/btn_one"/>

            <Button
                android:id="@+id/btn_five"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_four"
                android:layout_below="@+id/btn_two"/>

            <Button
                android:id="@+id/btn_six"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_five"
                android:layout_below="@+id/btn_three"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <Button
                android:id="@+id/btn_seven"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp"
                android:layout_below="@+id/btn_four"/>

            <Button
                android:id="@+id/btn_eight"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_seven"
                android:layout_below="@+id/btn_five"/>

            <Button
                android:id="@+id/btn_nine"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_eight"
                android:layout_below="@+id/btn_six"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btn_zero"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp"
                android:layout_below="@+id/btn_seven"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_zero"
                android:layout_below="@+id/btn_seven"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_plus"
                android:layout_below="@+id/btn_eight"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btn_multiply"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:layout_below="@+id/btn_zero"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_multiply"
                android:layout_below="@+id/btn_plus"/>



            <Button
                android:id="@+id/btn_equalto"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="30dp"
                android:layout_toRightOf="@+id/btn_divide"
                android:layout_below="@+id/btn_minus"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>